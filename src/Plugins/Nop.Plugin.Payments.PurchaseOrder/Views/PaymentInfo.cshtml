@{
    Layout = "";

}
@model Nop.Plugin.Payments.PurchaseOrder.Models.PaymentInfoModel

<script>
    // Disable Next Step Button until PO number entered - Porttomis Inc.
        $('.payment-info-next-step-button').prop('disabled', true);
        $('.payment-info-next-step-button').css("opacity", .3);               

    // Purchase Order Number can't be empty
    function Validate_PO()
    {
        var po_val = document.getElementById("PurchaseOrderNumber");
        //po_val = po_val.trim();
        if (po_val.length != 0)
        {
            $('.payment-info-next-step-button').prop('disabled', false);
            $('.payment-info-next-step-button').css("opacity", 1);
        }
        else
        {
            $('.payment-info-next-step-button').prop('disabled', true);
            $('.payment-info-next-step-button').css("opacity", .3);               
        }
    }
</script>
<table width="100%" cellspacing="2" cellpadding="1" border="0">
    <tr>
        <td width="100px">
            <label asp-for="PurchaseOrderNumber">@T("Plugins.Payment.PurchaseOrder.PurchaseOrderNumber"):</label>
        </td>
        <td>
            <input type="text" onchange="Validate_PO()" asp-for="PurchaseOrderNumber" style="width:165px;" autocomplete="off" />
            <span asp-validation-for="PurchaseOrderNumber"></span>

        </td>
    </tr>
</table>
